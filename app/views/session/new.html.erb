<h1 class="align-center">Login</h1>
<%= form_for(:session, :html=>{class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
	<div class="form-group">
	<div class="col-xs-2 control-label">
	  <%= f.label :email %>
	</div>

	<div class="col-xs-8">
	  <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter email..." %>
	</div>
	</div>

	<div class="form-group">
	  <div class="col-xs-2 control-label">
	    <%= f.label :password %>
	  </div>

	  <div class="col-xs-8">
	    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Enter password..." %>
	  </div>
	</div>


	<div class="form-group">
	<div class="col-xs-10 col-xs-offset-5">
	    <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
	</div>
	</div>
<% end %>

<div class="col-xs-4 col-xs-offset-5">
	[<%= link_to "Back to article listing", articles_path %>]
</div>