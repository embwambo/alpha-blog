<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html=>{class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-xs-2 control-label">
          <%= f.label :username %>
        </div>

        <div class="col-xs-8">
          <%= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Enter username..." %>
        </div>
      </div>

      <div class="form-group">
          <div class="col-xs-2 control-label">
            <%= f.label :email %>
          </div>

          <div class="col-xs-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email..." %>
          </div>
      </div>


      <div class="form-group">
          <div class="col-xs-2 control-label">
            <%= f.label :password %>
          </div>

          <div class="col-xs-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password..." %>
          </div>
      </div>

      <div class="form-group">
        <div class="col-xs-10 col-xs-offset-5">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>

    <div class="col-xs-4 col-xs-offset-5">
      [<%= link_to "Back to article listing", articles_path %>]
    </div>
  </div>
</div>
