<h1 class="align-center">Alpha Bloggers </h1>
	<%= will_paginate class: "align-center" %>
	<% @users.each do |user| %>
		<div class="align-center">
			<ul class="listing">
				<div class="row">
					<div class="well col-md-4 col-md-offset-4">
								<li> <%= link_to gravatar_for(user), user_path(user) %></li>
								<li class="article-title"> <%= link_to user.username, user_path(user) %></li>
								<li>
									<small><%= pluralize(user.articles.count, "article") if user.articles %></small>
								</li>
								<% if logged_in? and current_user.admin? %>
									<%= link_to "Delete this user and associated articles", user_path(user),
										method: :delete, data: {confirm: "Are you sure you want to delete this user ?"}%>
								<% end %>		
						</div>
				</div>
			</ul>
		</div>
	<% end %>
	<%= will_paginate class: "align-center" %>